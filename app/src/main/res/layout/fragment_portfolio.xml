<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PortfolioFragment"
    android:background="@color/cardview_dark_background">

    <androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/total_cost"
    android:id="@+id/portfolio_recycler"
    android:layout_margin="8dp"
    android:layout_alignParentTop="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:src="@android:drawable/ic_popup_sync"
        android:id="@+id/portfolio_reload"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/total_cost"
        android:layout_above="@id/portfolio_reload"
        android:text="Rs. 1000"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_margin="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/current_value"
        android:layout_alignParentRight="true"
        android:layout_above="@id/profit_loss"
        android:text="Rs. 1000"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/profit_loss"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/current_value"
        android:text="Rs. 1000"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_margin="8dp"/>

</RelativeLayout>