<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/live_indices"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/nse_live"
            android:weightSum="2"
            android:text="NIFTY 50"
            android:textSize="20dp"
            android:textColor="@android:color/holo_orange_dark"
            android:gravity="center"
            android:background="@color/teal_200"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_below="@id/live_indices"
        android:id="@+id/linear_layout_changers">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/gainers_btn"
            android:weightSum="2"
            android:text="Gainers"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/btn_back"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Losers"
            android:id="@+id/losers_btn"
            android:textSize="32dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/btn_back"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_layout_changers"
        android:layout_margin="8dp"
        android:id="@+id/rec_layout_changers"/>

</RelativeLayout>